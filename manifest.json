{
  "manifest_version": 3,
  "name": "Toolbar Clicker Challenge",
  "version": "1.0",
  "description": "Challenge your clicking speed in your browser toolbar or on a special stats page",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon1.png",
    "32": "icons/icon1.png",
    "48": "icons/icon1.png",
    "128": "icons/icon1.png"
  },
  "action": {},
  "host_permissions": [
    "https://www.google-analytics.com/"
  ],
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}