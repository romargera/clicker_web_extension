{
  "manifest_version": 3,
  "name": "Clicker Challenge",
  "version": "1.0",
  "description": "Test your speed by clicking the toolbar icon! Track your fastest clicking speed and total clicks.",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon1.png",
      "32": "icons/icon1.png",
      "48": "icons/icon1.png",
      "128": "icons/icon1.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.google-analytics.com/"
  ],
  "icons": {
    "16": "icons/icon1.png",
    "32": "icons/icon1.png",
    "48": "icons/icon1.png",
    "128": "icons/icon1.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["icons/icon1.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}