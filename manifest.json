{
  "manifest_version": 3,
  "name": "Clicker toolbar challenge",
  "short_name": "Clicker_RB",
  "author": "Roman Babuntc",
  "homepage_url": "https://yourdomain.com/privacy.html",
  "version": "1.0",
  "description": "Always-on clicker game with stats",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_icon": "icons/icon1.png"
  },
  "options_page": "onboarding.html",
  "content_scripts": [
    {
      "matches": ["https://example.com/*"],  
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon1.png",
    "48": "icons/icon1.png",
    "128": "icons/icon1.png"
  }
}